<Page x:Class="MyShop.GUI.Pages.Product.ProductDetailScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
      xmlns:local="clr-namespace:MyShop.GUI.Pages.Product" 
      xmlns:local1="clr-namespace:MyShop.Utilities.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductDetailScreen">

    <Page.Resources>
        <local1:RelativeToAbsoluteConverter x:Key="absoluteConverter"/>
        <local1:DecimalToCurrencyConverter x:Key="currencyConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!--Hiển thị nút bấm trở về-->
        <Button Name="BackButton"
            Width="85" Height="30"
                Background="NavajoWhite"
            Style="{StaticResource MyButtonStyle}"
            BorderThickness="0.5" BorderBrush="#071952"
            HorizontalAlignment="Left"
            Margin="20,10,0,0"
            Click="BackButtonClick">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome 
                Name="CatIcon"
                Width="11"
                Height="11"
                Margin="0,0,8,0"
                RenderOptions.BitmapScalingMode="HighQuality"
                Icon="ArrowLeft"
                Foreground="#071952"/>
                <TextBlock FontWeight="Bold" Foreground="#071952">Back</TextBlock>
            </StackPanel>
        </Button>

        <Image Grid.Row="1" 
           RenderOptions.BitmapScalingMode="HighQuality"
               Margin="10,10,10,10"
           VerticalAlignment="Top"
           Source="{Binding Product.image, Converter={StaticResource absoluteConverter}}">
            <Image.Effect>
                <DropShadowEffect 
                BlurRadius="35"
                ShadowDepth="10"
                Opacity="0.3"
                Direction="-90"
                Color="#8B4000"/>
            </Image.Effect>
        </Image>

        <Border Grid.Row="1" Grid.Column="1"
            Background="Transparent"
            Margin="0, 0, 20, 0" CornerRadius="15">
            <Grid Margin="30, 0, 30, 15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>


                <TextBlock
                Text="{Binding Product.name}"
                Margin="0, 0, 0, 10"
                Foreground="NavajoWhite"
                d:Text="Samsung Galaxy S20 Ultra"
                VerticalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                FontFamily="Segoe UI"/>

                <Grid Grid.Row="1">
                   

                    <StackPanel Orientation="Vertical">
             
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                                Width="14"
                                Height="14"
                                Margin="0, 0, 8, 0"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Icon="Navicon"
                                Foreground="White"/>

                                
                                <TextBlock
                                Text="Loại:"
                                Foreground="White"
                                FontSize="15"
                                FontWeight="Medium"/>

                            
                            <TextBlock Text="{Binding Category.name}"
                           FontSize="15"
                           Foreground="White"
                           Margin="10, 0, 0, 0"/>
                            </StackPanel>
                        </StackPanel>

                
                        <StackPanel Orientation="Vertical" Margin="0, 10, 0, 0">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                                Width="14"
                                Height="14"
                                Margin="0, 0, 8, 0"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Icon="Money"
                                Foreground="White"/>

                             
                                <TextBlock
                                Text="Giá"
                                Foreground="White"
                                FontSize="15"
                                FontWeight="Medium"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Name="PriceSP">
                                <TextBlock 
                                Text="{Binding Product.promotionPrice, Converter={StaticResource currencyConverter}}"
                                   
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="20"
                                Margin="22,0,0,0"/>
                           

                                <Border Name="PromotionBorder"
                                    Background="NavajoWhite"
                                    CornerRadius="5"
                                    Margin="10, 0,0,0"
                                    Height="20"
                                    Width="80">
                                    <StackPanel Orientation="Horizontal">

                                        <fa:ImageAwesome 
                                        Width="14"
                                        Height="14"
                                        Margin="0, 0, 8, 0"
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Icon="ArrowDown"
                                        Foreground="DarkRed"/>

                                        <TextBlock
                                    Name ="PromotionTextBlock"
                                    Foreground="DarkGreen"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                        FontSize="25"
                                    Text="{Binding Promotion.discountPercentage}"/>
                                        <TextBlock
                                    Name="percentText"
                                         FontSize="25"
                                    Foreground="DarkGreen"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="%"/>
                                    </StackPanel>

                                </Border>
                            </StackPanel>
                        </StackPanel>

                     
                        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome 
                                Width="14"
                                Height="14"
                                Margin="0, 0, 8, 0"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Icon="Calculator"
                                Foreground="White"/>
                                
                                <TextBlock
                                Text="Số lượng" 
                                Foreground="White"
                                FontSize="15"
                                FontWeight="Medium"/>
                            </StackPanel>

                            <TextBlock FontSize="15" Foreground="White" Margin="22, 0,0,0">
                            <Run Text="{Binding Product.stock}"/>
                            <Run Text="Sản Phẩm"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="353*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                  
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                        <fa:ImageAwesome 
                            Width="14"
                            Height="14"
                            Margin="0, 0, 8, 0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Icon="Edit"
                            Foreground="White"/>
                        <TextBlock Text="MÔ TẢ" Foreground="White" FontSize="16"
                         FontWeight="Bold" />
                    </StackPanel>
                    
                    <TextBlock Grid.Row="1" Text="{Binding Product.description}" Margin="20,0,0,0"
                           TextWrapping="Wrap" FontSize="15" Foreground="White" Grid.ColumnSpan="2"/>
                </Grid>

                <StackPanel Orientation="Vertical" Grid.Row="3">
                    <TextBlock Grid.ColumnSpan="2" Text="KHUYẾN MÃI"
                           Foreground="White" FontSize="16" FontWeight="Bold"/>
                    <Border HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        Height="30" Width="170" Margin="0,2,20,10"
                        BorderThickness="0.5" BorderBrush="#071952" CornerRadius="14" Background="WhiteSmoke">
                        <ComboBox Name="ListOfPromotion"
                              BorderThickness="0" BorderBrush="Transparent" Width="140"
                              VerticalContentAlignment="Center"
                              SelectionChanged="ListOfPromotionSelected">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding code}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">

                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">
            <Button Grid.Row="2" Grid.Column="1" Name="UpdateButton" Margin="0,0,10,0"
                    Background="NavajoWhite"
    Width="100" Height="30"
    Style="{StaticResource MyButtonStyle}"
    BorderThickness="0.5" BorderBrush="#071952"
    HorizontalAlignment="Left"
 
    Click="UpdateButtonOnClick">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome 
        Width="11" Height="11"
        Margin="0,0,8,0"
        RenderOptions.BitmapScalingMode="HighQuality"
        Icon="Edit"
        Foreground="#071952"/>
                    <TextBlock Text="Chỉnh sửa" FontWeight="Medium" Foreground="#071952"/>
                </StackPanel>
            </Button>

           
            <Button Name="DelProduct" Grid.Row="2" Grid.Column="1"
    Width="120" Height="30"
                    Background="DarkRed"
    Style="{StaticResource MyButtonStyle}"
    BorderThickness="0.5"
    BorderBrush="#071952"
    HorizontalAlignment="Right"
    Margin="0,0,20,0"
    Click="DeleteProductClick">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome 
        Width="11" Height="11"
        Margin="0,0,8,0"
        RenderOptions.BitmapScalingMode="HighQuality"
        Icon="Remove"
        Foreground="White"/>
                    <TextBlock Text="Xóa sản phẩm" FontWeight="Medium" Foreground="White"/>
                </StackPanel>
            </Button>
        </StackPanel>
        
    </Grid>
</Page>
